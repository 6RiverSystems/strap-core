{
	"compileOnSave": true,
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": true,
		"declaration": false,
		"forceConsistentCasingInFileNames": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"noImplicitReturns": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true
	},
	"lib": [
		"es2017"
	]
}
